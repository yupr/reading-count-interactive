{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  //指定したpluginのルールを指定
  "extends": "eslint:recommended",

  //サポートしたい言語のオプションを指定(デフォルトはes5)
  "parserOptions": {
    "ecmaVersion": 13
  },
  "rules": {
    "no-console": "off",
    "no-var": 2, // varは禁止
    "no-extra-semi": "warn",
    "no-undef": "warn",
    "quotes": ["warn", "single"],
    "space-before-blocks": ["warn", {
      "functions": "always"
    }]
  }
}
